            <Button fontSize="60" color="White" id="UpdateReminder" textColor="Black" onClick="updateReminder">
                Update
            </Button>
            <Button fontSize="60" color="White" id="UpdateElements" textColor="Black" onClick="updateElements">
                Update
            </Button>
            <Button fontSize="60" color="White" id="UpdateEnergy" textColor="Black" onClick="updateEnergy">
