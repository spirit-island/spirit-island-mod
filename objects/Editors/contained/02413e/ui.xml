<Panel position="0 -650 0" width="1250" height="250" rotation="0 0 180">
    <Button fontSize="150" color="rgba(0,0,0,0)" textColor="White">
        Spirit Panel Editor
    </Button>
</Panel>
<Panel position="0 950 0" width="1400" height="400" rotation="0 0 180">
    <VerticalLayout>
        <HorizontalLayout spacing="40">
            <Button fontSize="55" color="rgba(0,0,0,0)" textColor="White">
                Reminder
                Marker
            </Button>
            <Button fontSize="55" color="rgba(0,0,0,0)" textColor="White">
